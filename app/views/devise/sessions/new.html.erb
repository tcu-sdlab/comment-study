<!doctype html>
<html lang="jp">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="home.scss">
  <title>Log In</title>
  <link href="https://fonts.googleapis.com/css?family=Bellefair" rel="stylesheet">
  <!--<link href="https://fonts.googleapis.com/earlyaccess/hannari.css" rel="stylesheet" />-->
  <!--<link href="https://fonts.googleapis.com/earlyaccess/sawarabimincho.css" rel="stylesheet" />-->
</head>
<body>

<div class="background_box">
  <div class="content_box">
    <div class="main_content">
      <h2>Log in</h2>

      <div class="form_content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field form-group">
              <%= f.label 'ユーザーネーム' %>
              <%= f.text_field :username, autofocus: true, class: 'textfield form-control' %>
            </div>

            <div class="field form-group">
              <%= f.label 'パスワード' %>
              <%= f.password_field :password, autocomplete: 'off', class: 'textfield form-control' %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="check">
                  <%= f.check_box :remember_me %>
                  <%= f.label 'ユーザーを憶えておく' %>
                </div>
            <% end -%>

            <div class="action">
              <%= f.submit 'ログイン', :class=>'btn btn-default' %>
            </div>

            <% if alert %>
               <p class="alert alert-erroralert alert-danger" role="alert"><%= alert %></p>
            <% end %>

            <div class="sign_up_content">
              <p>初めてご利用ですか？</p>
              <%= link_to 'sign up', new_user_registration_path, :class=>'link_content'  %>
            </div>

        <% end %>

        <!--<div class="action">-->
        <!--<%= button_to 'サインアップ', new_user_registration_path, :method=>:get, :class=>'btn btn-default' %>-->
        <!--</div>-->

      </div>
    </div>
  </div>
</div>

</body>
</html>


